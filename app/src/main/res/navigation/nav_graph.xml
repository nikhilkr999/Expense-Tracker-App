<!-- res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_dashboard">

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.nikhil.expensetracker.presentation.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboard_to_addExpense"
            app:destination="@id/addEditExpenseFragment" />

        <action
            android:id="@+id/action_dashboard_to_editExpense"
            app:destination="@id/addEditExpenseFragment" />

        <action
            android:id="@+id/action_dashboard_to_expenses"
            app:destination="@id/nav_expenses" />

        <action
            android:id="@+id/action_dashboard_to_statistics"
            app:destination="@id/nav_statistics" />
    </fragment>

    <!-- Expenses List Fragment -->
    <fragment
        android:id="@+id/nav_expenses"
        android:name="com.nikhil.expensetracker.presentation.ui.expense.ExpenseListFragment"
        android:label="Expenses"
        tools:layout="@layout/fragment_expense_list">

        <action
            android:id="@+id/action_expenses_to_addExpense"
            app:destination="@id/addEditExpenseFragment" />

        <action
            android:id="@+id/action_expenses_to_editExpense"
            app:destination="@id/addEditExpenseFragment" />
    </fragment>

    <!-- Statistics Fragment -->
    <fragment
        android:id="@+id/nav_statistics"
        android:name="com.nikhil.expensetracker.presentation.ui.statistics.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.nikhil.expensetracker.presentation.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settings_to_categories"
            app:destination="@id/categoriesFragment" />

        <action
            android:id="@+id/action_settings_to_export"
            app:destination="@id/exportFragment" />
        <action
            android:id="@+id/action_settings_to_backup"
            app:destination="@id/backupFragment" />
    </fragment>

    <!-- Add/Edit Expense Fragment -->
    <fragment
        android:id="@+id/addEditExpenseFragment"
        android:name="com.nikhil.expensetracker.presentation.ui.expense.AddEditExpenseFragment"
        android:label="Add Expense"
        tools:layout="@layout/fragment_add_edit_expense">

        <argument
            android:name="expenseId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <!-- Categories Management Fragment -->
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.nikhil.expensetracker.presentation.ui.categories.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/action_categories_to_addCategory"
            app:destination="@id/addEditCategoryFragment" />

        <action
            android:id="@+id/action_categories_to_editCategory"
            app:destination="@id/addEditCategoryFragment" />
    </fragment>

    <!-- Add/Edit Category Fragment -->
    <fragment
        android:id="@+id/addEditCategoryFragment"
        android:name="com.nikhil.expensetracker.presentation.ui.categories.AddEditCategoryFragment"
        android:label="Add Category"
        tools:layout="@layout/fragment_add_edit_category">

        <argument
            android:name="categoryId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <!-- Export Fragment -->
    <fragment
        android:id="@+id/exportFragment"
        android:name="com.nikhil.expensetracker.presentation.ui.export.ExportFragment"
        android:label="Export Data"
        tools:layout="@layout/fragment_export" />

    <fragment
        android:id="@+id/backupFragment"
        android:name="com.nikhil.expensetracker.presentation.ui.backup.BackupFragment"
        android:label="Backup"
        tools:layout="@layout/fragment_backup" >
        <action
            android:id="@+id/action_settings_to_backup"
            app:destination="@id/backupFragment" />
    </fragment>
</navigation>